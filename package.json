{
  "name": "jest-environment-mongodb",
  "description": "MongoDB Jest environment using mongodb-memory-server",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Mikael Lirbank <mikael@airlab.io>",
  "license": "MIT",
  "repository": "https://github.com/lirbank/jest-environment-mongodb.git",
  "scripts": {
    "compile": "rimraf packages/*/dist && tsc --build tsconfig.build.json",
    "compile:watch": "tsc --build tsconfig.build.json --watch",
    "lint": "tslint --project tsconfig.base.json 'packages/**/src/**/*.ts'",
    "lint:fix": "tslint --project tsconfig.base.json --fix 'packages/**/src/**/*.ts'",
    "prettier": "prettier --list-different \"**/*.{ts,json,md}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,json,md}\""
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/mongodb": "3.1.22",
    "lerna": "3.13.1",
    "mongodb-memory-server": "4.2.1",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.4000"
  }
}
